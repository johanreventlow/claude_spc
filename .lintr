linters: linters_with_defaults(
    line_length_linter(120),
    object_name_linter = NULL,
    commented_code_linter = NULL,
    spaces_left_parentheses_linter = NULL,
    trailing_whitespace_linter(),
    assignment_linter(),
    function_left_parentheses_linter(),
    library_call_linter(),
    namespace_linter()
  )
exclusions: list(
    "R/golem_utils.R",
    "dev/",
    "tests/"
  )
encoding: "UTF-8"
